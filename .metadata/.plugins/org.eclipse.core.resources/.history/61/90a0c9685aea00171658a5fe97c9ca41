import java.awt.Color;
import java.awt.Graphics;
import java.awt.Panel;
class mypanel extends Panel implements Runnable {
	int x = 30;
    int y = 30;
    public void paint(Graphics g)
    {
    		  g.fillOval(x, y , 20, 20);
    }
    public void run()
    {
    	while(true)
    	{
    		y++;
    		if(y>400)
    		{
    	    	y = 0;
    	    }
    		try {
    			Thread.sleep(30);
    		}catch(Exception e)
    		repaint();
    	}
    }
}
